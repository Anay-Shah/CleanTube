{
  "manifest_version": 3,
  "name": "CleanTube",
  "version": "1.0",
  "description": "Remove visual clutter from YouTube and create a clean, focused viewing experience.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Minimalist YouTube"
  },
  "icons": {
    "128": "icons/icon.png"
  }
}